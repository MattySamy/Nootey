<div class="container-fluid container-fluid-custom py-md-5 mb-5">
    <main>
        <div class="row py-md-5 text-center justify-content-center">
            <div class="col md-12 col-lg-6 mb-6 mb-md-0">
                <h1 class="display-2 fw-bold mb-4 position-relative home-title">
                    Dash Board
                </h1>
            </div>
            <div class="row mb-4 mt-5">
                <div class="col">
                    <h1>Hey,
                        <%= locals.userName %> üëãüèª</h1>
                </div>
                <div class="col text-end">
                    <a href="/dashboard/add" class="btn btn-secondary note"><i class="fa-solid fa-note-sticky"></i
          ></a>
                </div>
            </div>
            <div class="row">
                <% if (notes.length>0) { %>
                    <% for( let index = 0; index < notes.length;
        index++ ) { %>
                        <div class="col-sm-3 mb-4">
                            <div class="card border-secondary" style="min-height: 210px">
                                <a href="/dashboard/item/<%= notes[index]._id %>" class="card-body text-decoration-none">
                                    <h5 class="card-title">
                                        <%= notes[index].title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= notes[index].body %>
                                    </p>
                                </a>
                            </div>
                        </div>
                        <% } %>
                            <% } else { %>
                                <div class="row">
                                    <div class="col">
                                        <img src="/img/human-3.svg" alt="human pointing towards a create btn" />
                                    </div>
                                    <div class="col mt-md-4">
                                        <h2>Okay...</h2>
                                        <h4>
                                            Let's start with your first note !<br /><br />
                                            <a href="/dashboard/add">Create One!</a>
                                        </h4>
                                    </div>
                                </div>
                                <% } %>
            </div>
            <% if (notes.length>0) { %>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center mt-5">
                        <% if (current==1) { %>
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/dashboard">First</a>
                                </li>
                                <% } %>
                                    <% var i = (Number(current)>5?Number(current)-4:1) %>
                                        <% if (i!==1) { %>
                                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                                            <% } %>
                                                <% for(; i <= (Number(current)+4) && i<=pages; i++ ) { %>
                                                    <% if (i==current) { %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="#">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                        <% } else { %>
                                                            <li class="page-item">
                                                                <a class="page-link" href="/dashboard/?page=<%= i %>">
                                                                    <%= i %>
                                                                </a>
                                                            </li>
                                                            <% } %>
                                                                <% if (i== Number(current) && i<pages) { %>
                                                                    <li class="page-item"><a class="page-link" href="#">...</a></li>
                                                                    <% } %>
                                                                        <% if (i==Number(current)+4 && i<pages) { %>
                                                                            <li class="page-item">
                                                                                <a class="page-link" href="#">
                                                                                ...
                                                                            </a>
                                                                            </li>
                                                                            <% } %>
                                                                                <% } %>
                                                                                    <% if (current==pages) { %>
                                                                                        <li class="page-item disabled">
                                                                                            <a class="page-link" href="#">
                                                                                    Last
                                                                                </a>
                                                                                        </li>
                                                                                        <% } else { %>
                                                                                            <li class="page-item">
                                                                                                <a class="page-link" href="/dashboard/?page=<%= pages %>">
                                                                                    Next
                                                                                </a>
                                                                                            </li>
                                                                                            <% } %>
                    </ul>
                </nav>
                <% } %>
        </div>
    </main>
</div>